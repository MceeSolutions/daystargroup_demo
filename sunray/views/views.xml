<odoo>
  <data>
	
	<record id="pipeline_sunray_form" model="ir.ui.view">
	    <field name="name">pipeline.sunray.form</field>
	    <field name="model">crm.lead</field>
	    <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
	    <field name="arch" type="xml">
			<field name="tag_ids" position="after">
				<field name="size"/>
	    		<field name="type_of_offer"/>
			</field>
	    </field>
	</record>
	
	<record id="sunray_helpdesk_ticket_view_form" model="ir.ui.view">
	    <field name="name">helpdesk.sunray.form</field>
	    <field name="model">helpdesk.ticket</field>
	    <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
	    <field name="arch" type="xml">
			<field name="priority" position="before">
				<field name="project_id"/>
			</field>
	    </field>
	</record>
	
	<record model="ir.actions.act_window" id="VendorRequest_action_window">
      <field name="name">Vendor Request</field>
      <field name="res_model">vendor.request</field>
      <field name="context">{"default_supplier": 1, "default_customer": 0}</field>
      <field name="domain">[('supplier', '=', True)]</field>
      <field name="view_mode">tree,form</field>
    </record>
	
	<record model="ir.actions.act_window" id="expense_report_action">
        <field name="name">Expense</field>
        <field name="res_model">expense.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
	
	<record model="ir.actions.act_window" id="payment_request_action">
        <field name="name">Payment Request</field>
        <field name="res_model">payment.request</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
	
	<record model="ir.actions.act_window" id="parking_list_action">
        <field name="name">Expense</field>
        <field name="res_model">parking.list</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
	
	<record model="ir.ui.view" id="payment_request_tree_view">
        <field name="name">payment.request.tree</field>
        <field name="model">payment.request</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="name"/>
        </field>
    </record>
	
    <record model="ir.ui.view" id="expense_report_tree_view">
        <field name="name">expense.report.tree</field>
        <field name="model">expense.report</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name ="name"/>
            <field name="date"/>
            <field name="day"/>
            <field name="description"/>
            <field name="expense"/>
            <field name="receipt"/>
        </field>
    </record>


        <record model="ir.ui.view" id="expense_report_form_view">
            <field name="name">expense.report.form</field>
            <field name="model">expense.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string = "Business Expense Report">
                    <sheet>

                        <group col="4" colspan="2">
                            <field name="name"/>
                            <field name="purpose"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>

                        <notebook>
                            <page string = "Business Expense Form">
                                <field name="line_ids" colspan="4">
                                    <tree string = "Expense Structure" editable ="bottom">
                                        <field name='date'/>
                                        <field name='day'/>
                                        <field name='description'/>
                                        <field name='expense'/>
                                        <field name='receipt'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                        <group class="oe_left" colspan="6">
                            <field name="employee_id"/>
                            <field name="employee_sign_date"/>
                        </group> 

                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="expense_advanced" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_company" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_employee" widget="monetary" options="{'currency_field': 'currency_id'}"/>

                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="total_expense"/>
                                </div>
                                <field name="total_expense" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>    
                    </sheet>    
                </form>    
            </field>
        </record>
	
	<record model="ir.ui.view" id="parking_list_form_view">
            <field name="name">parking.list.form</field>
            <field name="model">parking.list</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string = "Parking List">
                    <sheet>

                        <group col="4" colspan="2">
                            <field name="date"/>
                            <field name="request_no"/>
                            <field name="site"/> 
                            <field name="requester"/>
                            <field name="reciever_id"/>
                        </group>

                        <notebook>
                            <page string = "Parking List Form ">
                                <field name="line_ids" colspan="4">
                                    <tree string = "Expense Structure" editable ="bottom">
                                        <field name='serial_no'/>
                                        <field name='item'/>
                                        <field name='part_no'/>
                                        <field name='quantity'/>
                                        <field name='packaging'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                       
                        <group string ='Ware House Sign out' class="oe_left" col='2' colspan="2">
                            <field name="employee_id"/>
                            <field name="employee_sign_date"/>
                        </group> 

                        <group string ='Security Check' class="oe_right" col='2' colspan="2">
                            <field name="security_id"/>
                            <field name="security_sign_date"/>
                        </group> 

                    </sheet>    
                </form>    
            </field>
        </record>
	
	<record model="ir.ui.view" id="payment_request_form_view">
            <field name="name">payment.request.form</field>
            <field name="model">payment.request</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string = "Business Expense Report">
                    <sheet>

                        <group string ="Purchase Request" col="4" colspan="2">
                            <field name="pr_no"/>
                            <field name="issue_date"/>
                            <field name="request_company"/>
                            <field name="item_type"/>
                            <field name="description"/>
                        </group>

                        <notebook>
                            <page string = "Payment form">
                                <field name="line_ids" colspan="4">
                                    <tree string="Driver Structure" editable="bottom">
                                        <field name="material"/>
                                        <field name="specification"/>
                                        <field name="part_no"/>
                                        <field name="quantity"/>
                                        <field name="unit"/>
                                    </tree>    
                                </field>  
                            </page>  
                        </notebook> 

                        <group string = "Recommended Vendors for Bidding" colspan="5" cols="5">
                            <field name="company_name"/>
                            <field name="contact_person"/>
                            <field name="contact_email"/>
                            <field name="contact_phone"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
	
	<record id="customer_request_form" model="ir.ui.view">
	    <field name="name">vendor.request.form</field>
	    <field name="model">vendor.request</field>
	    <field name="priority" eval="2"/>
	    <field name="arch" type="xml">
	        <form string="Partners">
	   	<header>
			<button name="button_submit" states="draft" string="Submit" type="object" />
			<button name="button_approve" states="submit" string="Approve" type="object" groups="account.group_account_invoice"/>
			<button name="button_reject" states="submit" string="Reject" type="object" groups="account.group_account_invoice"/>
			<button name="button_reset" states="reject" string="Set to Draft" type="object" />
			<field name="state" widget="statusbar" statusbar_visible="draft,submit,approve" readonly="1"/>
	    </header>
	        <sheet>
	            <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
	            <div class="oe_title">
	                <field name="is_company" invisible="1"/>
	                <field name="company_type" widget="radio"
	                    class="oe_edit_only"
	                    options="{'horizontal': true}"/>
	                <h1>
	                    <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
	                </h1>
	                <div class="o_row">
	                    <field name="parent_id"
	                        placeholder="Company"
	                        domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'default_supplier': supplier, 'default_customer': customer}"
	                        attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
	                        <field name="company_name" attrs="{'invisible': ['|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}"/>
	                        <button name="create_company" type="object" string="Create company" class="btn btn-sm oe_edit_only fa fa-external-link btn btn-link " attrs="{'invisible': ['|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)]}"/>
	                </div>
	            </div>
	            <group>
	            
	                <group>
	                    <field name="type" attrs="{'invisible': [('parent_id','=', False)]}" groups="base.group_no_one"/>
	                    <label for="street" string="Address"/>
	                    <div class="o_address_format">
	                        <div class="oe_edit_only">
	                            <button name="open_parent" type="object" string="(edit)" class="oe_link"
	                                attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
	                        </div>
	                        <field name="street" placeholder="Street..." class="o_address_street"
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
	                        <field name="street2" placeholder="Street 2..." class="o_address_street"
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
	                        <field name="city" placeholder="City" class="o_address_city"
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
	                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
	                        <field name="zip" placeholder="ZIP" class="o_address_zip"
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
	                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
	                    </div>
	                    <field name="vat" placeholder="e.g. BE0477472701"/>
	                </group>
	                <group>
	                    <field name="function" placeholder="e.g. Sales Director"
	                        attrs="{'invisible': [('is_company','=', True)]}"/>
	                    <field name="phone" widget="phone"/>
	                    <field name="mobile" widget="phone"/>
	                    <field name="email" widget="email" context="{'gravatar_image': True}"/>
	                    <field name="company_id" groups="base.group_system"/>
	                    <field name="customer" invisible="1"/>
	                    <field name="supplier" invisible="1"/>
	                </group>
	            </group>
	        </sheet>
	        <div class="oe_chatter">
	             <field name="message_follower_ids" widget="mail_followers"/>
	             <field name="activity_ids" widget="mail_activity"/>
	             <field name="message_ids" widget="mail_thread"/>
	        </div>
	        </form>
	    </field>
    </record>
    
    <record model="ir.actions.act_window" id="availability_demand_action_window">
      <field name="name">Avalability Demand Form</field>
      <field name="res_model">availability.request</field>
      <field name="context">{}</field>
      <field name="domain">[]</field>
      <field name="view_mode">tree,form</field>
    </record>
		
	<record id="sunray_availability_demand_form" model="ir.ui.view">
	    <field name="name">availability.request.form</field>
	    <field name="model">availability.request</field>
	    <field name="priority" eval="2"/>
	    <field name="arch" type="xml">
	        <form string="Availability Demand Form">
	   	<header>
			<button name="button_submit" states="draft" string="Submit" type="object" />
			<button name="create_purchase_order" states="submit" string="Create Rfq" type="object" groups="account.group_account_invoice"/>
			<button name="create_store_request" states="submit" string="Create Store Request" type="object" groups="account.group_account_invoice"/>
			<button name="button_reject" states="submit" string="Reject" type="object" groups="account.group_account_invoice"/>
			<button name="button_reset" states="reject" string="Set to Draft" type="object" />
			<field name="state" widget="statusbar" statusbar_visible="draft,submit,approve" readonly="1"/> 
	    </header>
	        <sheet>
	        	<h1 class="hidden-xs">
                    <field name="name" attrs="{'invisible': [('name','=','/')]}" readonly="1"/>
                </h1>
                <group col="4" colspan="4">
                    <field name="requestor_id"/>
                    <field name="request_date"/>
                    <field name="request_client_id"/>
                    <field name="department_name"/>
                </group>
                <field name="request_move_line">
                   <tree string="Stock Moves" editable="bottom">
                   		<field name="product_id"/>
                    	<field name="product_oum_qty"/>
                    	<field name="price_cost" readonly="1"/>
                   </tree>
               </field>
	        </sheet>
	        <div class="oe_chatter">
	             <field name="message_follower_ids" widget="mail_followers"/>
	             <field name="activity_ids" widget="mail_activity"/>
	             <field name="message_ids" widget="mail_thread"/>
	        </div>
	        </form>
	    </field>
    </record>
	
	<menuitem name="Vendor Request" id="Vendor_request_menu" parent="purchase.menu_purchase_config"
              action="VendorRequest_action_window" sequence="100"/>
    <menuitem name="Expense Form" id="expense_report_sunray_main_menu" parent="purchase.menu_purchase_config"
              action="expense_report_action"/>
    <menuitem name="Parking List" id="parking_sunray_main_menu" parent="purchase.menu_purchase_config"
              action="parking_list_action"/>
    <menuitem name="Payment Request Form" id="payment_sunray_main_menu" parent="purchase.menu_purchase_config"
              action="payment_request_action"/>
    <menuitem name="Availability Demand Form" id="availability_demand_menu" parent="stock.menu_stock_root"
              action="availability_demand_action_window"/>
	
  </data>
</odoo>
