                                <field name="total_price" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>   
                        
                        </page>
                        <page string="Additional Info" name="extra" groups="stock.group_stock_user">
